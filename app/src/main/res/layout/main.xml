<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    tools:context="mitso.v.homework_3.MainActivity">

    <TextView
        style="@style/textStyle"

        android:id="@+id/v_text"
        android:text="@string/s_instruction"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        style="@style/inputStyle"

        android:id="@+id/v_firstInput"

        android:layout_below="@+id/v_text"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/buttonStyle"

        android:id="@+id/v_plusButton"
        android:text="@string/s_plus"

        android:layout_marginTop="@dimen/d_margin50"
        android:layout_marginLeft="@dimen/d_margin25"
        android:layout_below="@+id/v_firstInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="@style/buttonStyle"

        android:id="@+id/v_minusButton"
        android:text="@string/s_minus"

        android:layout_marginRight="@dimen/d_margin10"
        android:layout_alignTop="@+id/v_plusButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        style="@style/inputStyle"

        android:id="@+id/v_secondInput"

        android:layout_marginTop="@dimen/d_margin70"
        android:layout_below="@+id/v_plusButton"
        android:layout_centerHorizontal="true" />

    <TextView
        style="@style/screenStyle"

        android:id="@+id/v_screen"

        android:layout_marginTop="@dimen/d_margin50"
        android:layout_below="@+id/v_secondInput"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
